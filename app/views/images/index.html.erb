
<h1> Listing Images </h1>

<div>
  <%= link_to new_image_path, class: 'btn btn-primary' do %>
    <i class="glyphicon glyphicon-plus"></i> Add New Image
  <% end %>
</div>
<div class='container-fluid'>
  <div class='row'>
    <% @images.each do |image| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
      
        <!-- <td><%= image.link %></td> -->
        <!-- <td><%= image_tag image.link, :style => "max-width:400px"%></td> -->
        <!-- <td><img src = <%= image.link %> style="max-width:400px;"></td> -->
        <%= link_to image_tag(image.link, class: "index_image img-circle"), image.link%>
        <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      
      </div>
    <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>