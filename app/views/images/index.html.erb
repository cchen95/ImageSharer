
<h1> Listing Images </h1>

<%= link_to "New Image", new_image_path %>
<table>
	<tbody>
    <% @images.each do |image| %>
      <tr>
        <!-- <td><%= image.link %></td> -->
        <!-- <td><%= image_tag image.link, :style => "max-width:400px"%></td> -->
        <!-- <td><img src = <%= image.link %> style="max-width:400px;"></td> -->
